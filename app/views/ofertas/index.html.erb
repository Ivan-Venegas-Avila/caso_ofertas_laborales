<p id="notice"><%= notice %></p>

<div class="container">
<h1>Ofertas</h1>

<table class=table-bordered>
  <thead>
    <tr>
      <th>Puesto</th>
      <th>Descripcion</th>
      <th>Vacantes</th>
      <th>Rango salarial</th>
      <th>Fecha inicio</th>
      <th>Modalidad</th>
      <th>Region</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ofertas.each do |oferta| %>
      <tr>
        <td><%= oferta.puesto %></td>
        <td><%= oferta.descripcion %></td>
        <td><%= oferta.vacantes %></td>
        <td><%= oferta.rango_salarial %></td>
        <td><%= oferta.fecha_inicio %></td>
        <td><%= oferta.modalidad %></td>
        <td><%= oferta.region %></td>
        <td><%= oferta.empresa_id %></td>
        <td><%= link_to 'Show', oferta %></td>
        <td><%= link_to 'Edit', edit_oferta_path(oferta) %></td>
        <td><%= link_to 'Destroy', oferta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Oferta', new_oferta_path %>

</div>
